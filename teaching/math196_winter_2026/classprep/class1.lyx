\left[\begin{array}{rrrrr|r}
2 & 4 & -2 & 2 & 4 & 2\\
0 & 0 & 1 & 0 & -1 & 4\\
0 & 0 & 1 & -2 & 3 & -2\\
0 & 0 & 0 & 1 & -2 & 3
\end{array}\right]\\
\left[\begin{array}{rrrrr|r}
