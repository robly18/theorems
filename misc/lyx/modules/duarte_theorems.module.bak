#\DeclareLyXModule{Duarte Theorems}
#\DeclareCategory{My Custom Modules}
#DescriptionBegin
#My standard ntheorem theorems
#DescriptionEnd
#Excludes: theorems-ams | theorems-starred | theorems-std

# Author: Duarte Maia

Format 104

Preamble
\usepackage[amsmath,thmmarks]{ntheorem}
EndPreamble


OutlinerName thm "Definitions & Theorems"

Style Theorem
	Category              Reasoning
	Margin                First_Dynamic
	LatexType             Environment
	LatexName             thm
	NextNoIndent          1
	ResetArgs             1
	AddToToc              thm
	IsTocCaption          1
	Argument 1
		LabelString    "Additional Theorem Text"
		Tooltip        "Additional text appended to the theorem header"
		IsTocCaption      1
	EndArgument
	LabelSep              xx
	ParIndent             MMM
	ParSkip               0.4
	ItemSep               0.2
	TopSep                0.7
	BottomSep             0.7
	ParSep                0.3
	Align                 Block
	AlignPossible         Left
	LabelType             Static
	LabelCounter          theorem
	LabelString           "Theorem \thetheorem."
	Font
	  Shape               Up
	  Size                Normal
	EndFont
	LabelFont
	  Shape               Up
	  Series              Bold
	EndFont
	Preamble
        \theoremstyle{plain}
        \theorembodyfont{\upshape}
        \theoremheaderfont{\bfseries}
        \theoremseparator{.}
        \theoremnumbering{arabic}
        \theoremsymbol{}
        \newtheorem{thm}{Theorem}
	EndPreamble
	Requires              ntheorem
End

Style Proof
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             proof
	LabelString           "Proof:"
    LabelCounter          ""
	AddToToc              ""
	Preamble
        \theoremstyle{nonumberplain}
        \theoremheaderfont{\itshape}
        \theorembodyfont{\upshape}
        \theoremseparator{:}
        \theoremsymbol{\ensuremath{\blacksquare}}
        \newtheorem{proof}{Proof}
        
        \theoremstyle{plain}
        \theorembodyfont{\upshape}
        \theoremheaderfont{\bfseries}
        \theoremseparator{.}
        \theoremnumbering{arabic}
        \theoremsymbol{}
	EndPreamble

	LabelFont
	  Shape               Italic
	  Series              Medium
	EndFont
    EndLabelType Filled_Box
    Requires amssymb
End

Style Definition
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             definition
	LabelString           "Definition \thetheorem."
	Preamble
		\newtheorem{definition}[thm]{Definition}
	EndPreamble
End

Style Proposition
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             prop
	LabelString           "Proposition \thetheorem."
	Preamble
		\newtheorem{prop}[thm]{Proposition}
	EndPreamble
End

Style Lemma
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             lemma
	LabelString           "Lemma \thetheorem."
	Preamble
		\newtheorem{lemma}[thm]{Lemma}
	EndPreamble
End

Style Remark
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             remark
	LabelString           "Remark \thetheorem."
	Preamble
		\newtheorem{remark}[thm]{Remark}
	EndPreamble
End

Style Corollary
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             corollary
	LabelString           "Corollary \thetheorem."
	Preamble
		\newtheorem{corollary}[thm]{Corollary}
	EndPreamble
End


Style Claim
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             claim
	LabelString           "Claim:"
    LabelCounter          ""
	Preamble
        \theoremstyle{nonumberplain}
        \theorembodyfont{\upshape}
        \theoremseparator{:}
		\newtheorem{claim}[thm]{Claim}
        \theoremstyle{plain}
        \theorembodyfont{\upshape}
        \theoremheaderfont{\bfseries}
        \theoremseparator{.}
        \theoremnumbering{arabic}
        \theoremsymbol{}
	EndPreamble
End


Style Fact
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             fact
	LabelString           "Fact \thetheorem."
	Preamble
		\newtheorem{fact}[thm]{Fact}
	EndPreamble
End

Style Theorem*
	CopyStyle             Theorem
	DependsOn             Theorem
	Category              Reasoning*
	LatexName             thm*
	LabelCounter          ""
	LabelString           "Theorem."
	Preamble
        \theoremstyle{nonumberplain}
        \theorembodyfont{\upshape}
        \theoremheaderfont{\bfseries}
        \theoremseparator{.}
        \renewtheorem{thm*}{Theorem}
        \theoremstyle{plain}
        \theorembodyfont{\upshape}
        \theoremheaderfont{\bfseries}
        \theoremseparator{.}
        \theoremnumbering{arabic}
        \theoremsymbol{}
	EndPreamble
End

Style Question*
	CopyStyle             Theorem*
	DependsOn             Theorem
	LatexName             question*
	LabelString           "Question."
	Preamble
        \theoremstyle{nonumberplain}
        \theorembodyfont{\upshape}
        \theoremheaderfont{\bfseries}
        \theoremseparator{.}
        \newtheorem{question*}{Question}
        \theoremstyle{plain}
        \theorembodyfont{\upshape}
        \theoremheaderfont{\bfseries}
        \theoremseparator{.}
        \theoremnumbering{arabic}
        \theoremsymbol{}
	EndPreamble
End



Counter theorem
	GuiName Theorem
	LaTeXName thm
	RefFormat thm "Theorem \arabic{theorem}"
	RefFormat lemma "Lemma \arabic{theorem}"
	RefFormat prop "Proposition \arabic{theorem}"
	RefFormat fact "Fact \arabic{theorem}"
End
