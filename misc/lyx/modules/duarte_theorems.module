	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             corollary
	LabelString           "Corollary \thetheorem."
    RefPrefix             cor
	Preamble
        \newref{cor}{refcmd={Corollary~\ref{#1}}}
		\newtheorem{corollary}[thm]{Corollary}
	EndPreamble
