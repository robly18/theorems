#\DeclareLyXModule{Duarte Theorems}
#\DeclareCategory{My Custom Modules}
#DescriptionBegin
#My standard ntheorem theorems
#DescriptionEnd
#Excludes: theorems-ams | theorems-starred | theorems-std

# Author: Duarte Maia

Format 104

Preamble
\usepackage[amsmath,thmmarks]{ntheorem}
EndPreamble


OutlinerName thm "Definitions & Theorems"

Style Theorem
	Category              Reasoning
	Margin                First_Dynamic
	LatexType             Environment
	LatexName             thm
    RefPrefix             thm
	NextNoIndent          1
	ResetArgs             1
	AddToToc              thm
	IsTocCaption          1
	Argument 1
		LabelString    "Additional Theorem Text"
		Tooltip        "Additional text appended to the theorem header"
		IsTocCaption      1
	EndArgument
	LabelSep              xx
	ParIndent             MMM
	ParSkip               0.4
	ItemSep               0.2
	TopSep                0.7
	BottomSep             0.7
	ParSep                0.3
	Align                 Block
	AlignPossible         Left
	LabelType             Static
	LabelCounter          theorem
	LabelString           "Theorem \thetheorem."
	Font
	  Shape               Up
	  Size                Normal
	EndFont
	LabelFont
	  Shape               Up
	  Series              Bold
	EndFont
	Preamble
        \newref{thm}{refcmd={Theorem~\ref{#1}}}
        \theoremstyle{plain}
        \theorembodyfont{\upshape}
        \theoremheaderfont{\bfseries}
        \theoremseparator{.}
        \theoremnumbering{arabic}
        \theoremsymbol{}
        \newtheorem{thm}{Theorem}
	EndPreamble
	Requires              ntheorem
    Requires              refstyle
End

Style Proof
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             proof
	LabelString           "Proof:"
    LabelCounter          ""
	AddToToc              ""
	Preamble
        \theoremstyle{nonumberplain}
        \theoremheaderfont{\itshape}
        \theorembodyfont{\upshape}
        \theoremseparator{:}
        \theoremsymbol{\ensuremath{\blacksquare}}
        \newtheorem{proof}{Proof}
        
        \theoremstyle{plain}
        \theorembodyfont{\upshape}
        \theoremheaderfont{\bfseries}
        \theoremseparator{.}
        \theoremnumbering{arabic}
        \theoremsymbol{}
	EndPreamble

	LabelFont
	  Shape               Italic
	  Series              Medium
	EndFont
    EndLabelType Filled_Box
    Requires amssymb
End

Style Definition
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             definition
	LabelString           "Definition \thetheorem."
    RefPrefix             def
	Preamble
        \newref{def}{refcmd={Definition~\ref{#1}}}
		\newtheorem{definition}[thm]{Definition}
	EndPreamble
End

