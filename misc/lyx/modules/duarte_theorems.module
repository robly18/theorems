Style Claim
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             claim
	LabelString           "Claim:"
    LabelCounter          ""
    RefPrefix             claim
	Preamble
        \theoremstyle{nonumberplain}
        \theorembodyfont{\upshape}
        \theoremseparator{:}
		\newtheorem{claim}[thm]{Claim}
        \theoremstyle{plain}
        \theorembodyfont{\upshape}
        \theoremheaderfont{\bfseries}
        \theoremseparator{.}
        \theoremnumbering{arabic}
        \theoremsymbol{}
	EndPreamble
End


Style Fact
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             fact
	LabelString           "Fact \thetheorem."
    RefPrefix             fact
	Preamble
		\newtheorem{fact}[thm]{Fact}
	EndPreamble
End

Style Theorem*
	CopyStyle             Theorem
	DependsOn             Theorem
	Category              Reasoning*
	LatexName             thm*
	LabelCounter          ""
	LabelString           "Theorem."
	Preamble
        \theoremstyle{nonumberplain}
        \theorembodyfont{\upshape}
        \theoremheaderfont{\bfseries}
        \theoremseparator{.}
        \renewtheorem{thm*}{Theorem}
        \theoremstyle{plain}
        \theorembodyfont{\upshape}
        \theoremheaderfont{\bfseries}
        \theoremseparator{.}
        \theoremnumbering{arabic}
        \theoremsymbol{}
	EndPreamble
End

Style Corollary*
	CopyStyle             Theorem*
	DependsOn             Theorem*
	LatexName             corollary*
	LabelString           "Corollary."
	Preamble
        \theoremstyle{nonumberplain}
        \theorembodyfont{\upshape}
        \theoremheaderfont{\bfseries}
        \theoremseparator{.}
		\renewtheorem{corollary*}{Corollary}
        \theoremstyle{plain}
        \theorembodyfont{\upshape}
        \theoremheaderfont{\bfseries}
        \theoremseparator{.}
        \theoremnumbering{arabic}
        \theoremsymbol{}
	EndPreamble
End

Style Question*
	CopyStyle             Theorem*
	DependsOn             Theorem
	LatexName             question*
	LabelString           "Question."
	Preamble
        \theoremstyle{nonumberplain}
        \theorembodyfont{\upshape}
        \theoremheaderfont{\bfseries}
        \theoremseparator{.}
        \newtheorem{question*}{Question}
        \theoremstyle{plain}
        \theorembodyfont{\upshape}
        \theoremheaderfont{\bfseries}
        \theoremseparator{.}
        \theoremnumbering{arabic}
        \theoremsymbol{}
	EndPreamble
End

Style Conjecture
	CopyStyle             Theorem
	DependsOn             Theorem
	LatexName             conjecture
	LabelString           "Conjecture \thetheorem."
    RefPrefix             conj
	Preamble
        \newref{conj}{refcmd={Conjecture~\ref{#1}}}
		\newtheorem{conjecture}[thm]{Conjecture}
	EndPreamble
End



Counter theorem
	GuiName Theorem
	LaTeXName thm
	RefFormat thm "Theorem \arabic{theorem}"
	RefFormat lem "Lemma \arabic{theorem}"
	RefFormat prop "Proposition \arabic{theorem}"
	RefFormat fact "Fact \arabic{theorem}"
    RefFormat cor "Corollary \arabic{theorem}"
    RefFormat def "Definition \arabic{theorem}"
    RefFormat rmk "Remark \arabic{theorem}"
    RefFormat conj "Conjecture \arabic{theorem}"
    RefFormat ex "Example \arabic{theorem}"
End
